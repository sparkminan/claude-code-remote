# Server Configuration
PORT=8080
HOST=0.0.0.0

# WebSocket Configuration
WS_PORT=8090

# Security
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_EXPIRY=24h

# Authentication
# Generate password hash using: node -e "const bcrypt = require('bcrypt'); bcrypt.hash('your-password', 10).then(console.log)"
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD_HASH=$2b$10$g5X4osqbn8I14WLd2J.QseAJYzmRFqRW.d/3b28hc7SLpxbIVO1fq

# Claude Code Configuration
CLAUDE_CODE_PATH=claude-code
CLAUDE_CODE_ARGS=

# Process Management
PROCESS_TIMEOUT=300000
MAX_OUTPUT_BUFFER_SIZE=1048576

# Logging
LOG_LEVEL=info
LOG_FILE=claude-code-remote.log

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Command Restrictions
ENABLE_COMMAND_WHITELIST=false
COMMAND_WHITELIST=ls,dir,pwd,echo,help
ENABLE_COMMAND_BLACKLIST=true
COMMAND_BLACKLIST=rm,del,format,shutdown,reboot

# SSL/TLS (for HTTPS/WSS)
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key

# Development
NODE_ENV=development