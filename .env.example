# サーバー設定
PORT=8090
NODE_ENV=development

# セキュリティ
JWT_SECRET=your-very-secure-random-string-change-this-in-production

# Claude Code設定
CLAUDE_CODE_PATH=claude-code
# フルパスで指定する場合:
# CLAUDE_CODE_PATH=C:\Users\your-username\AppData\Local\Programs\claude-code\claude-code.exe

# ログ設定（オプション）
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# CORS設定（オプション）
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000

# セッション設定（オプション）
SESSION_TIMEOUT=86400000  # 24時間（ミリ秒）
MAX_SESSIONS=10           # 最大同時セッション数

# プロセス管理（オプション）
PROCESS_TIMEOUT=3600000   # 1時間（ミリ秒）
MAX_OUTPUT_BUFFER=10485760 # 10MB